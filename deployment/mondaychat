# give mondaychat user permission to start/stop/restart mondaychat systemd service

%mondaychat ALL=NOPASSWD: /bin/systemctl start mondaychat.target
%mondaychat ALL=NOPASSWD: /bin/systemctl stop mondaychat.target
%mondaychat ALL=NOPASSWD: /bin/systemctl restart mondaychat.target
%mondaychat ALL=NOPASSWD: /usr/local/bin/cwctl
